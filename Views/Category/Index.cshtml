@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null){
    <h4 style="left:25%; ">@TempData["success"]</h4>
}
<div class="container p-3">
    <div class="row p-4">
        <div class="col p-6">
            <h2>Category List</h2>
        </div>
        <div class="col p-6" style="text-align: right; ">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" ><i class="bi bi-plus-circle"></i>  Create New Category</a>
        </div>

    </div>
</div>

<table class="table table-bordered table-striped "style="width: 100%;">
    <thead>
        <tr>
            <th>
                Category Name
             </th>
             <th>
                 Display Order
             </th>
             <th>
                 Edit
             </th>
             <th>
                 Delete
             </th>
         </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="width: 50%;"> 
                    @obj.Name
                </td>
                <td style="width: 30%;">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group " role="group">
                       <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" 
                       class="btn btn-outline-warning"  > <i class="bi bi-pencil-square"></i>  Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-50 btn-group " role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

